    <!--增加一个商品-->
    <insert id="addGoods" parameterType="Goods">
      insert into mybatis.goods(goodsId,goodsName,goodsType,goodsNum,goodsAddress,goodsTime)
      values (#{goodsId},#{goodsName}, #{goodsType}, #{goodsNum}, #{goodsAddress},#{goodsTime})
   </insert>

    <!--根据id删除一个商品-->
    <delete id="deleteGoodsByID" parameterType="int">
      delete from mybatis.goods where goodsId=#{goodsId}
   </delete>

    <select id="queryAllGoods" resultType="Goods">
      SELECT * from mybatis.goods
   </select>


